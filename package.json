{
  "name": "marp-slides",
  "version": "1.0.0",
  "private": true,
  "description": "Marp presentation slides",
  "scripts": {
    "preview": "marp --preview --watch",
    "preview:all": "marp --preview --watch --input-dir slides/",
    "build": "npm run build:html && npm run build:pdf",
    "build:html": "marp --input-dir slides/ --output dist/ --html",
    "build:pdf": "marp --input-dir slides/ --output dist/ --pdf",
    "build:pptx": "marp --input-dir slides/ --output dist/ --pptx"
  },
"devDependencies": {
    "@kazumatu981/markdown-it-kroki": "^1.3.6",
    "@marp-team/marp-cli": "^4"
  }
}
